{
  "root": true,
  "extends" :["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "7",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "globals": {
    "React":true
  },
  "plugins": ["react"],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-console": 1,
    "no-unused-vars": 0,
    "semi": 2,
    "no-var": 2,
    "no-new-object": 2,
    "no-array-constructor":2,
    "quotes": [2, "single", { "avoidEscape": true }],
    //"prefer-const":2,
    "prefer-template": 2,
    "no-useless-escape": 2,
    "no-alert": 2
  }
}